<h1><%= "登録済みの仕込み一覧" %></h1>

<h2>仕込み検索</h2>
<%= search_form_for @search_food_prep, url: search_food_preps_path do |f| %>
  <%= f.label :name_cont, '仕込み項目名' %>
  <%= f.search_field :name_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<table class = "table">
  <thead>
    <tr>
      <th><%= "仕込み項目名" %></th>
      <th><%= "使用食材" %></th>
      <th><%= "カテゴリ" %></th>
    </tr>
  </thead>

  <tbody>
    <% @group_food_preps.each do |food_prep| %>
      <tr>
        <td><%= food_prep.name %></td>
        <td><%= food_prep.ingredient %></td>
        <td>
          <% food_prep.labels.each do |label| %>
            <%= label.name %>
          <% end %>
        </td>
        <td><%= link_to t('詳細を見る'), food_prep_path(food_prep), method: :get %></td>
        <td><%= link_to t('編集する'), edit_food_prep_path(food_prep), method: :get %></td> 
        <td><%= link_to t('削除する'), food_prep_path(food_prep), method: :delete, data: { confirm: '本当に削除しますか？' }  %></td> 
      </tr>
    <% end %> 
  </tbody>  
</table>