<h1>グループ編集</h1>

<%= form_with(model: @group, local: true) do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="card">
          <div class="card-body">
            <div class="form-group">
              <p><%= f.label 'グループ名' %></p>
              <p><%= f.text_field :name, class: "form-control" %></p>

              <div class="button">  
                <%= f.submit '編集する', class: "btn btn-info" %>
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>        
  </div>    
<% end %>