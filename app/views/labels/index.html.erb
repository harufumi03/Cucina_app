<h1><%= 'カテゴリ一覧' %></h1>

<table class = "table">
  <thead>
    <tr>
      <th><%= 'カテゴリ名' %></th>
      <th><%= '登録仕込み数' %></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name%></td>
        <td><%= label.food_preps.count %></td>
        <td><%= link_to t('編集する'), edit_label_path(label) %></td>
        <td><%= link_to t('削除する'), label_path(label), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
