<div class="image_root">
  <%= link_to root_path do %>
    <%= image_tag 'textlogo.png', :size =>'500x190' %>
  <% end %>
</div>     
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="card">
          <div class="card-body">

            <h2>新規ユーザ登録</h2>
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, placeholder: "クッチーナ太郎", class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password", class: "form-control"%>
            </div>

            <div class="button">
              <%= f.submit "登録する", class: "btn btn-info" %>
            </div>
          </div>  
        </div>  
      </div>  
    </div>
  </div>  
<% end %>


