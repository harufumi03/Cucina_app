
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="card">
          <div class="card-body">
            <%= render "users/shared/error_messages", resource: resource %>

            <h2>新規ユーザ登録</h2>
            <div class="form-group">
              <%= f.label "名前" %><br />
              <%= f.text_field :name, placeholder: "クッチーナ太郎", class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label "メールアドレス" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label "パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "password", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label "パスワード（確認）" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password", class: "form-control"%>
            </div>

            <div class="button">
              <%= f.submit "登録する", class: "btn btn-info" %>
            </div>
          </div>  
        </div>  
      </div>  
    </div>
  </div>  
<% end %>

<%= render "users/shared/links" %>
